@model Tuple<List<Coursework2.Data.Models.CurrentQuestion>, string, string, string>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
    <p>@Model.Item1[0].Question</p>


    <form method="post" action="/CurrQuestion/CurrQuestionUsersAnswer" id="Form">
        <input type="hidden" name="idGameSession" value="@Model.Item2">
        <input type="hidden" name="idUsers" value="@Model.Item3">
        <input type="hidden" name="idPackage" value="@Model.Item4">
        <input type="text" name="Answer">
        <button type="submit" style="display: none"></button>
    </form>

    <p id="Timer"></p>
    <script src="~/JS/CurrQuestionUser.js"></script>
</body>

</html>
